@page "/randevu"
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms
@using System.ComponentModel.DataAnnotations

<div class="page-container">
    <h1 class="page-title">Randevu Alın</h1>
    <div class="appointment-content">
        <div class="appointment-form">
            <EditForm Model="@appointmentForm" OnValidSubmit="@HandleSubmit">
                <DataAnnotationsValidator />
                <div class="form-group">
                    <label>Ad Soyad</label>
                    <InputText @bind-Value="appointmentForm.Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label>E-posta</label>
                    <InputText @bind-Value="appointmentForm.Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Telefon</label>
                    <InputText @bind-Value="appointmentForm.Phone" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Konu</label>
                    <InputSelect @bind-Value="appointmentForm.Subject" class="form-control">
                        <option value="">Seçiniz...</option>
                        <option value="ticaret">Ticaret Hukuku</option>
                        <option value="gayrimenkul">Gayrimenkul Hukuku</option>
                        <option value="aile">Aile Hukuku</option>
                        <option value="ceza">Ceza Hukuku</option>
                    </InputSelect>
                </div>
                <div class="form-group">
                    <label>Tercih Ettiğiniz Tarih</label>
                    <InputDate @bind-Value="appointmentForm.PreferredDate" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Mesajınız</label>
                    <InputTextArea @bind-Value="appointmentForm.Message" class="form-control" />
                </div>
                <button type="submit" class="submit-button">Randevu Talep Et</button>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private AppointmentForm appointmentForm = new();

    private class AppointmentForm
    {
        public string? Name { get; set; }
        public string? Email { get; set; }
        public string? Phone { get; set; }
        public string? Subject { get; set; }
        public DateTime? PreferredDate { get; set; }
        public string? Message { get; set; }
    }

    private void HandleSubmit()
    {
        // Randevu form gönderme işlemleri burada yapılacak
    }
} 